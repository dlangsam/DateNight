<p id="notice"><%= notice %></p>

<h1>Date Ideas</h1>

    <%= form_tag("/search", method: "get") do %>
    <div>
          <input type="text" class="form-control zip" placeholder="Search">
        </div>
    <button type="submit" class="btn btn-default search">Submit</button>
    <%end %>


<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @date_ideas.each do |date_idea| %>
      <tr>
        <td><%=date_idea.name%></td>
        <td><%= link_to 'Show', date_idea %></td>
        <td><%= link_to 'Edit', edit_date_idea_path(date_idea) %></td>
        <td><%= link_to 'Destroy', date_idea, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Date Idea', new_date_idea_path %>
