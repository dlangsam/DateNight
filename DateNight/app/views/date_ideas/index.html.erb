<p id="notice"><%= notice %></p>
<div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">Date Ideas
                    <small>for <%=@current_user.first_name%></small>
                </h1>
            </div>
</div>

<%@date_ideas.each_with_index do |date_idea, index|%>
  <% if index % 3 == 0 %>
     <div class="row">
  <% end %>
     <div class="col-md-4 portfolio-item">
                <a href="<%=date_idea_url(date_idea)%>">
                    <img class="img-responsive" src="<%=date_idea.image_file%>" alt="Picture of restaurant">
                </a>
                <h4>
                    <a href="<%=date_idea_url(date_idea)%>"><%=date_idea.name%></a>
                    
                </h4>
                <p><%= date_idea.city %></p>
                <!-- <a href = "/users/<%=current_user.id%>/date_ideas/<%=date_idea.id%>" data-method:="delete" class = "btn"> Remove Date </a> -->
              
            </div>

  <% if index % 3 == 2 %>
     </div>
  <% end %>
 
<%end %>


