<p id="notice"><%= notice %></p>
<div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">Date Ideas
                    <small>for <%=@current_user.first_name%></small>
                </h1>
            </div>
</div>

<%@date_ideas.each_with_index do |date_idea, index|%>
  <% if index % 3 == 0 %>
     <div class="row">
  <% end %>
     <div class="col-md-4 user-date">
              <div class = "business-photo-container">
                <a href="<%=user_date_idea_url(@current_user, date_idea)%>">
                    <img class="img-responsive business-photo" src="<%=date_idea.image_file%>" alt="Picture of restaurant">
                </a>
              </div>
              <div class = "business-info">
                <h4>
                    <a href="<%=user_date_idea_url(@current_user, date_idea)%>"><%=date_idea.name%></a>
                    
                </h4>
                <p><%= date_idea.city %></p>
                <div class="delete-date">
                <a href= "<%=user_date_idea_url(@current_user, date_idea)%>" data-confirm="Are you sure?" data-method="delete"><span class="glyphicon glyphicon-remove"></span>Delete</a>
                </div>
                </div>
              
            </div>

  <% if index % 3 == 2 %>
     </div>
  <% end %>
 
<%end %>


