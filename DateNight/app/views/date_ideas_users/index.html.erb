<p id="notice"><%= notice %></p>
<div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">Date Ideas
                    <small>for <%=@current_user.first_name%></small>
                </h1>
            </div>
</div>

<%@date_ideas.each_with_index do |date_idea, index|%>
  <% if index % 3 == 0 %>
     <div class="row">
  <% end %>
     <div class="col-md-4 user-date">
                <a href="<%=date_idea_url(date_idea)%>">
                    <img class="img-responsive business-photo" src="<%=date_idea.image_file%>" alt="Picture of restaurant">
                </a>
                <h4>
                    <a href="<%=date_idea_url(date_idea)%>"><%=date_idea.name%></a>
                    
                </h4>
                <p><%= date_idea.city %></p>
                <%= link_to 'Delete', user_date_idea_url(@current_user, date_idea), method: :delete, data: {confirm: 'Are you sure?'} %>
              
            </div>

  <% if index % 3 == 2 %>
     </div>
  <% end %>
 
<%end %>


